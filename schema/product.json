{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Product",
  "type": "object",
  "properties": {
    "id": {
      "type": "number"
    },
    "brand": {
      "title": "Brand",
      "description": "The Brand name",
      "type": "string",
      "maxLength": 20
    },
    "description": {
      "title": "Description",
      "description": "A description.",
      "type": "string",
      "maxLength": 100
    },
    "name": {
      "title": "Name",
      "description": "The Name",
      "type": "string",
      "maxLength": 20
    },
    "price": {
      "title": "Price",
      "description": "The price in US currency",
      "type": "number",
      "exclusiveMinimum": 0,
      "minimum": 0
    }
  },
  "required": ["brand", "name", "price"]
}
