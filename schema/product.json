{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Product",
  "type": "object",
  "properties": {
    "id": {
      "type": "number"
    },
    "brand": {
      "description": "a product's brand name",
      "type": "string",
      "maxLength": 20
    },
    "description": {
      "description": "a product's description",
      "type": "string",
      "maxLength": 100
    },
    "name": {
      "description": "a product's name",
      "type": "string",
      "maxLength": 20
    },
    "price": {
      "description": "a product's price",
      "type": "number",
      "exclusiveMinimum": true,
      "minimum": 0
    }
  },
  "required": ["brand", "name", "price"]
}
